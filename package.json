{
  "name": "pawket",
  "version": "0.2.0",
  "license": "GPL-3.0",
  "author": "SutuLabs",
  "private": "true",
  "scripts": {
    "dev": "cd ./ui && yarn dev",
    "dev:mixch": "cd ./ui && yarn dev:mixch",
    "dev:cli": "cd ./cli && yarn dev",
    "build:all": "yarn check-i18n --ci && yarn build:pawket && yarn build:mixch",
    "build:pawket": "cd ./ui && yarn build:pawket",
    "build:ext": "cd ./ui && yarn build:ext",
    "build:mixch": "cd ./ui && yarn build:mixch",
    "build:cli": "cd ./cli && yarn build",
    "build:cli:docker": "cd ./cli && yarn build:docker",
    "build:cordova": "cd ./ui && yarn build:cordova",
    "check-i18n": "vue-i18n-extract report --vueFiles \"./ui/src/**/*.?(js|ts|vue)\" --languageFiles \"./ui/src/i18n/?(en|zh-cn).?(json|yml|yaml|js)\"",
    "check-i18n:all": "vue-i18n-extract report --vueFiles \"./ui/src/**/*.?(js|ts|vue)\" --languageFiles \"./ui/src/i18n/*.?(json|yml|yaml|js)\"",
    "importmods": "cd ./cli && yarn importmods",
    "lint": "eslint --ext .ts,.js,.vue --fix ui/ cli/ lib-chia/",
    "test:lib": "cd ./lib-chia && jest --coverage=false",
    "test:cli": "cd ./cli && jest --coverage=false",
    "test": "yarn test:cli && yarn test:lib"
  },
  "devDependencies": {
    "vue-i18n-extract": "^2.0.4"
  },
  "workspaces": [
    "ui",
    "lib-chia",
    "cli"
  ]
}